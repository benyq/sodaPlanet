<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.benyq.sodaplanet.base.widget.HeaderView
            android:id="@+id/headerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:toolbar_title="音乐播放" />

        <LinearLayout
            android:id="@+id/llController"
            android:layout_width="300dp"
            android:layout_height="68dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <FrameLayout
                android:id="@+id/btnPlayLast"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_remote_views_action_background">

                <ImageView
                    android:id="@+id/ivPlayLast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_remote_view_play_last" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/btnPlayToggle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_remote_views_action_background">

                <ImageView
                    android:id="@+id/ivPlayToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_remote_view_pause" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/btnPlayNext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_remote_views_action_background">

                <ImageView
                    android:id="@+id/ivPlayNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_remote_view_play_next" />
            </FrameLayout>

        </LinearLayout>

        <SeekBar
            android:id="@+id/skMusic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="30dp"
            android:max="100"
            android:progress="0"
            android:maxHeight="3dp"
            android:minHeight="3dp"
            android:progressDrawable="@drawable/shape_seekbar"
            app:layout_constraintBottom_toTopOf="@id/llController" />

        <ImageView
            android:id="@+id/ivPlayingAlbum"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:layout_constraintBottom_toTopOf="@id/llController"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerView"
            app:srcCompat="@drawable/ic_playing_album" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>