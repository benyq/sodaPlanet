<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_grey"
        android:orientation="vertical">

        <com.benyq.sodaplanet.base.widget.HeaderView
            android:id="@+id/headerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:toolbar_title="@string/settings" />


        <com.benyq.sodaplanet.base.widget.IconFormLine
            android:id="@+id/ifAboutApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:form_title="@string/about_app" />

        <View style="@style/string_horizontal_divider" />


    </LinearLayout>
</layout>